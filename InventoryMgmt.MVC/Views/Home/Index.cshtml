@model InventoryMgmt.MVC.Models.HomeIndexViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="hero-section bg-primary text-white py-5 mb-5 rounded-3">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3">
                    <i class="bi bi-boxes me-3"></i>Professional Inventory Management
                </h1>
                <p class="lead mb-4">
                    Organize, track, and manage your assets with custom fields, real-time collaboration, and powerful search capabilities.
                </p>
                @if (User.Identity!.IsAuthenticated)
                {
                    <a class="btn btn-light btn-lg me-3" asp-controller="Inventory" asp-action="Create">
                        <i class="bi bi-plus-circle me-2"></i>Create Inventory
                    </a>
                    <a class="btn btn-outline-light btn-lg" asp-controller="Inventory" asp-action="MyInventories">
                        <i class="bi bi-person-workspace me-2"></i>My Inventories
                    </a>
                }
                else
                {
                    <a class="btn btn-light btn-lg me-3" asp-area="Identity" asp-page="/Account/Register">
                        <i class="bi bi-person-plus me-2"></i>Get Started
                    </a>
                    <a class="btn btn-outline-light btn-lg" asp-area="Identity" asp-page="/Account/Login">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                    </a>
                }
            </div>
            <div class="col-lg-4 text-center">
                <i class="bi bi-diagram-3-fill display-1 opacity-75"></i>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-clock-history me-2 text-primary"></i>Latest Inventories
                    </h4>
                </div>
                <div class="card-body p-0">
                    @if (Model.LatestInventories.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th><i class="bi bi-box me-1"></i>Name</th>
                                        <th><i class="bi bi-tag me-1"></i>Category</th>
                                        <th><i class="bi bi-person me-1"></i>Owner</th>
                                        <th><i class="bi bi-calendar3 me-1"></i>Created</th>
                                        <th class="text-center"><i class="bi bi-collection me-1"></i>Items</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var inventory in Model.LatestInventories)
                                    {
                                        <tr class="inventory-row" data-url="@Url.Action("Details", "Inventory", new { id = inventory.Id })">
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(inventory.ImageUrl))
                                                    {
                                                        <img src="@inventory.ImageUrl" class="rounded me-3" width="40" height="40" style="object-fit: cover;" />
                                                    }
                                                    else
                                                    {
                                                        <div class="bg-secondary rounded me-3 d-flex align-items-center justify-content-center text-white" style="width: 40px; height: 40px;">
                                                            <i class="bi bi-box"></i>
                                                        </div>
                                                    }
                                                    <div>
                                                        <div class="fw-semibold">@inventory.Title</div>
                                                        @if (!string.IsNullOrEmpty(inventory.Description) && inventory.Description.Length > 0)
                                                        {
                                                            <small class="text-muted">@inventory.Description.Substring(0, Math.Min(50, inventory.Description.Length))@(inventory.Description.Length > 50 ? "..." : "")</small>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@inventory.Category?.Name</span>
                                            </td>
                                            <td>@inventory.Owner?.FullName</td>
                                            <td>
                                                <small class="text-muted">@inventory.CreatedAt.ToString("MMM dd, yyyy")</small>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-primary">@inventory.ItemsCount</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="p-4 text-center text-muted">
                            <i class="bi bi-inbox display-1 mb-3"></i>
                            <p>No inventories found. Be the first to create one!</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-star-fill me-2 text-warning"></i>Popular Inventories
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.PopularInventories.Any())
                    {
                        @foreach (var inventory in Model.PopularInventories)
                        {
                            <div class="d-flex align-items-center mb-3 inventory-card" data-url="@Url.Action("Details", "Inventory", new { id = inventory.Id })">
                                @if (!string.IsNullOrEmpty(inventory.ImageUrl))
                                {
                                    <img src="@inventory.ImageUrl" class="rounded me-3" width="48" height="48" style="object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="bg-primary rounded me-3 d-flex align-items-center justify-content-center text-white" style="width: 48px; height: 48px;">
                                        <i class="bi bi-box"></i>
                                    </div>
                                }
                                <div class="flex-grow-1">
                                    <h6 class="mb-1 text-primary">@inventory.Title</h6>
                                    <small class="text-muted d-block">by @inventory.Owner?.FullName</small>
                                    <small class="badge bg-success">@inventory.ItemsCount items</small>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center text-muted py-3">
                            <i class="bi bi-graph-up display-4 mb-2"></i>
                            <p class="mb-0">Popular inventories will appear here</p>
                        </div>
                    }
                </div>
            </div>

            <div class="card shadow-sm mt-4">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2 text-info"></i>Features
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            Custom fields for any data type
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            Real-time collaboration
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            Advanced search & filtering
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            Custom ID generation
                        </li>
                        <li class="mb-0">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            Multi-language support
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Make inventory rows clickable
        document.querySelectorAll('.inventory-row, .inventory-card').forEach(element => {
            element.addEventListener('click', function(e) {
                if (e.target.tagName !== 'A' && e.target.tagName !== 'BUTTON') {
                    window.location.href = this.dataset.url;
                }
            });
        });
    </script>
}