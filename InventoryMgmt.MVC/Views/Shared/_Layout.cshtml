<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inventory Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/toast.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InventoryManagement.MVC.styles.css" asp-append-version="true" />
    <!-- Add CSRF token for AJAX requests -->
    @Html.AntiForgeryToken()
    <meta name="__RequestVerificationToken" content="@Html.AntiForgeryToken().ToString()" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-boxes me-2"></i>InventoryManager
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Search Form -->
                <form class="d-flex flex-grow-1 mx-3" asp-controller="Home" asp-action="Search" method="get">
                    <div class="input-group w-100" style="max-width: 500px;">
                        <input class="form-control" type="search" name="q" placeholder="Search inventories..." value="@ViewBag.SearchTerm">
                        <button class="btn btn-outline-light" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </form>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house me-1"></i>Home
                            </a>
                        </li>
                        @if (User.Identity!.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Inventory" asp-action="MyInventories">
                                    <i class="bi bi-person-workspace me-1"></i>My Inventories
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-gear me-1"></i>Settings
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" href="#" id="theme-toggle">
                                            <i class="bi bi-moon-fill me-2"></i>Dark Mode
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#" id="language-toggle">
                                            <i class="bi bi-translate me-2"></i>Español
                                        </a>
                                    </li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Users">
                                                <i class="bi bi-people me-2"></i>User Management
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid" style="margin-top: 80px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Support Ticket Modal -->
    <div class="modal fade" id="supportTicketModal" tabindex="-1" aria-labelledby="supportTicketModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="supportTicketModalLabel">
                        <i class="bi bi-life-preserver me-2"></i>Create Support Ticket
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="supportTicketForm">
                        <input type="hidden" id="sourceUrl" name="sourceUrl" value="" />
                        <input type="hidden" id="inventoryId" name="inventoryId" value="" />
                        
                        <div class="mb-3">
                            <label for="summary" class="form-label">Summary</label>
                            <input type="text" class="form-control" id="summary" name="summary" required 
                                   placeholder="Brief description of your issue" />
                        </div>
                        
                        <div class="mb-3">
                            <label for="priority" class="form-label">Priority</label>
                            <select class="form-select" id="priority" name="priority" required>
                                <option value="">Select priority level</option>
                                <option value="High">High</option>
                                <option value="Average">Average</option>
                                <option value="Low">Low</option>
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label for="additionalInfo" class="form-label">Additional Details (Optional)</label>
                            <textarea class="form-control" id="additionalInfo" name="additionalInfo" rows="3"
                                      placeholder="Any additional context or details about your issue"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="submitSupportTicket">
                        <i class="bi bi-send me-2"></i>Submit Ticket
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Help Button -->
    <div class="position-fixed bottom-0 end-0 mb-4 me-4" style="z-index: 1030;">
        <button class="btn btn-primary rounded-circle p-3 shadow" id="helpButton" title="Get Help">
            <i class="bi bi-question-lg fs-5"></i>
        </button>
    </div>

    <footer class="border-top footer text-muted bg-light mt-5">
        <div class="container">
            <div class="row py-4">
                <div class="col-md-6">
                    <h6 class="fw-bold">Inventory Management System</h6>
                    <p class="small mb-0">Professional inventory management for modern organizations.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="small mb-0">
                        &copy; 2025 - Inventory Management -
                        <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Privacy</a> |
                        <a href="#" id="createSupportTicketLink" class="text-decoration-none">Create Support Ticket</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>
    
    <!-- Toast container for notifications -->
    <div id="toast-container" class="toast-container position-fixed bottom-0 end-0 p-3"></div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/toast-utility.js" asp-append-version="true"></script>
    <script src="~/js/item-handler.js" asp-append-version="true"></script>
    <script src="~/js/support-ticket.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
    @* Display toast notifications from TempData using existing toast-utility.js *@
    @if (TempData["ToastMessage"] != null)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                const message = "@Html.Raw(TempData["ToastMessage"])";
                const type = "@(TempData["ToastType"] ?? "info")";
                
                console.log("Displaying toast:", message, type);
                
                // Use the toast-utility.js directly
                ToastUtility.show(message, type);
            });
        </script>
    }
</body>
</html>