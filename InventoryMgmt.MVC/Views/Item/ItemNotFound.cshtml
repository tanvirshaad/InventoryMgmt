@{
    ViewData["Title"] = "Item Not Found";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i>Item Not Found</h2>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="bi bi-search" style="font-size: 4rem;"></i>
                    </div>
                    
                    <h3 class="text-center mb-4">We couldn't find the item you're looking for</h3>
                    
                    <p class="text-center mb-4">
                        The item might have been deleted or you may have followed an outdated link.
                    </p>
                    
                    <div class="text-center mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary me-2">
                            <i class="bi bi-house-door me-1"></i> Go to Home
                        </a>
                        <a href="javascript:history.back()" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Go Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
