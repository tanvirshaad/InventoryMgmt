@model InventoryMgmt.BLL.DTOs.InventoryDto

@{
    ViewData["Title"] = "Delete Inventory";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h2 class="text-center mb-0">
                    <i class="bi bi-exclamation-triangle me-2"></i>Delete Inventory
                </h2>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <h5 class="alert-heading">Warning!</h5>
                    <p class="mb-0">You are about to permanently delete this inventory. This action cannot be undone.</p>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5>Inventory Details</h5>
                        <dl class="row">
                            <dt class="col-sm-4">Title:</dt>
                            <dd class="col-sm-8">@Model.Title</dd>
                            
                            <dt class="col-sm-4">Category:</dt>
                            <dd class="col-sm-8">@Model.Category?.Name</dd>
                            
                            <dt class="col-sm-4">Created:</dt>
                            <dd class="col-sm-8">@Model.CreatedAt.ToString("MMM dd, yyyy")</dd>
                            
                            <dt class="col-sm-4">Items:</dt>
                            <dd class="col-sm-8">@Model.ItemsCount items</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <h5>Description</h5>
                            <p class="text-muted">@Model.Description</p>
                        }
                        
                        <div class="mt-3">
                            <span class="badge @(Model.IsPublic ? "bg-success" : "bg-secondary")">
                                @(Model.IsPublic ? "Public" : "Private") Inventory
                            </span>
                        </div>
                    </div>
                </div>

                <div class="alert alert-warning">
                    <h6 class="alert-heading">What will be deleted:</h6>
                    <ul class="mb-0">
                        <li>The inventory itself</li>
                        <li>All items within this inventory</li>
                        <li>All access permissions for this inventory</li>
                        <li>All comments and likes associated with items</li>
                    </ul>
                </div>

                <form asp-action="Delete" method="post">
                    <div class="d-flex gap-2 justify-content-center">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-2"></i>Delete Inventory
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
