@{
    ViewData["Title"] = "My Inventories";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h2>My Inventories</h2>
            <p class="text-muted">Manage your personal inventories and access shared ones.</p>
        </div>
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Create New Inventory
            </a>
        </div>
    </div>

    <!-- Owned Inventories -->
    <div class="row mb-4">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-folder me-2"></i>Inventories I Own
                    </h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.OwnedInventories != null && ((IEnumerable<dynamic>)ViewBag.OwnedInventories).Any())
                    {
                        <div class="row">
                            @foreach (var inventory in ViewBag.OwnedInventories)
                            {
                                <div class="col-md-6 col-lg-4 mb-3">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <h6 class="card-title">@inventory.Title</h6>
                                            <p class="card-text text-muted small">
                                                @(inventory.Description?.Length > 100 ? inventory.Description.Substring(0, 100) + "..." : inventory.Description)
                                            </p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <small class="text-muted">
                                                    <i class="bi bi-box me-1"></i>@inventory.Items?.Count items
                                                </small>
                                                <span class="badge @(inventory.IsPublic ? "bg-success" : "bg-secondary")">
                                                    @(inventory.IsPublic ? "Public" : "Private")
                                                </span>
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <div class="btn-group w-100" role="group">
                                                <a asp-action="Details" asp-route-id="@inventory.Id" class="btn btn-outline-primary btn-sm">
                                                    <i class="bi bi-eye me-1"></i>View
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@inventory.Id" class="btn btn-outline-secondary btn-sm">
                                                    <i class="bi bi-pencil me-1"></i>Edit
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-folder-x display-4 text-muted"></i>
                            <p class="text-muted mt-3">You haven't created any inventories yet.</p>
                            <a asp-action="Create" class="btn btn-primary">Create Your First Inventory</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Accessible Inventories -->
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-share me-2"></i>Inventories I Can Access
                    </h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.AccessibleInventories != null && ((IEnumerable<dynamic>)ViewBag.AccessibleInventories).Any())
                    {
                        <div class="row">
                            @foreach (var inventory in ViewBag.AccessibleInventories)
                            {
                                <div class="col-md-6 col-lg-4 mb-3">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <h6 class="card-title">@inventory.Title</h6>
                                            <p class="card-text text-muted small">
                                                @(inventory.Description?.Length > 100 ? inventory.Description.Substring(0, 100) + "..." : inventory.Description)
                                            </p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <small class="text-muted">
                                                    <i class="bi bi-box me-1"></i>@inventory.Items?.Count items
                                                </small>
                                                <small class="text-muted">
                                                    <i class="bi bi-person me-1"></i>@inventory.Owner?.FirstName @inventory.Owner?.LastName
                                                </small>
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <a asp-action="Details" asp-route-id="@inventory.Id" class="btn btn-outline-primary btn-sm w-100">
                                                <i class="bi bi-eye me-1"></i>View
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-share display-4 text-muted"></i>
                            <p class="text-muted mt-3">You don't have access to any shared inventories yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
