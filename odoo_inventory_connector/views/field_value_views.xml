<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_inventory_connector_field_value_form" model="ir.ui.view">
            <field name="name">inventory.connector.field.value.form</field>
            <field name="model">inventory.connector.field.value</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="item_id"/>
                            <field name="field_name"/>
                            <field name="field_type"/>
                        </group>
                        <group>
                            <field name="text_value" invisible="field_type not in ['text', 'multiline']"/>
                            <field name="numeric_value" invisible="field_type != 'numeric'"/>
                            <field name="boolean_value" invisible="field_type != 'boolean'"/>
                            <field name="display_value"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- List View -->
        <record id="view_inventory_connector_field_value_tree" model="ir.ui.view">
            <field name="name">inventory.connector.field.value.list</field>
            <field name="model">inventory.connector.field.value</field>
            <field name="arch" type="xml">
                <list>
                    <field name="field_name"/>
                    <field name="field_type"/>
                    <field name="display_value"/>
                    <field name="item_id"/>
                </list>
            </field>
        </record>
    </data>
</odoo>