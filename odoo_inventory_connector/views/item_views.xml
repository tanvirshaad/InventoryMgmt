<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View for Items -->
        <record id="view_inventory_connector_item_form" model="ir.ui.view">
            <field name="name">inventory.connector.item.form</field>
            <field name="model">inventory.connector.item</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="inventory_id"/>
                            <field name="external_id"/>
                            <field name="import_date"/>
                            <field name="last_update"/>
                        </group>
                        <notebook>
                            <page string="Field Values">
                                <field name="field_value_ids"/>
                            </page>
                            <page string="Tags">
                                <field name="tag_ids" widget="many2many_tags"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- List View for Items -->
        <record id="view_inventory_connector_item_tree" model="ir.ui.view">
            <field name="name">inventory.connector.item.list</field>
            <field name="model">inventory.connector.item</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="inventory_id"/>
                    <field name="external_id"/>
                    <field name="import_date"/>
                </list>
            </field>
        </record>

        <!-- Search View for Items -->
        <record id="view_inventory_connector_item_search" model="ir.ui.view">
            <field name="name">inventory.connector.item.search</field>
            <field name="model">inventory.connector.item</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="inventory_id"/>
                    <field name="external_id"/>
                </search>
            </field>
        </record>

        <!-- Action for Items -->
        <record id="action_inventory_connector_item" model="ir.actions.act_window">
            <field name="name">Items</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">inventory.connector.item</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>