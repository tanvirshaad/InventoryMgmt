<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_inventory_connector_inventory_form" model="ir.ui.view">
            <field name="name">inventory.connector.inventory.form</field>
            <field name="model">inventory.connector.inventory</field>
            <field name="arch" type="xml">
                <form string="Inventory">
                    <header>
                        <button name="action_test_connection" string="Test Connection" type="object" class="btn-secondary"/>
                        <button name="action_sync_inventory" string="Synchronize Metadata" type="object" class="oe_highlight" />
                        <button name="action_import_items" string="Import Items" type="object" class="oe_highlight" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Inventory Title"/>
                            </h1>
                        </div>
                        <group col="4">
                            <group colspan="2">
                                <field name="category"/>
                                <field name="is_public"/>
                                <field name="item_count"/>
                            </group>
                            <group colspan="2">
                                <field name="api_token" password="True"/>
                                <field name="api_url"/>
                                <field name="last_sync"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description" nolabel="1"/>
                            </page>
                            <page string="Field Definitions">
                                <field name="field_definition_ids" nolabel="1"/>
                            </page>
                            <page string="Field Aggregations">
                                <field name="field_aggregation_ids" nolabel="1"/>
                            </page>
                            <page string="Additional Info">
                                <group>
                                    <group>
                                        <field name="external_id"/>
                                        <field name="created_at"/>
                                        <field name="updated_at"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- List View -->
        <record id="view_inventory_connector_inventory_tree" model="ir.ui.view">
            <field name="name">inventory.connector.inventory.list</field>
            <field name="model">inventory.connector.inventory</field>
            <field name="arch" type="xml">
                <list string="Inventories">
                    <field name="name"/>
                    <field name="category"/>
                    <field name="is_public"/>
                    <field name="item_count"/>
                    <field name="last_sync"/>
                </list>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_inventory_connector_inventory_search" model="ir.ui.view">
            <field name="name">inventory.connector.inventory.search</field>
            <field name="model">inventory.connector.inventory</field>
            <field name="arch" type="xml">
                <search string="Search Inventories">
                    <field name="name"/>
                    <field name="category"/>
                    <filter string="Public" name="public" domain="[('is_public', '=', True)]"/>
                    <filter string="Private" name="private" domain="[('is_public', '=', False)]"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Category" name="group_by_category" context="{'group_by': 'category'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_inventory_connector_inventory" model="ir.actions.act_window">
            <field name="name">External Inventories</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">inventory.connector.inventory</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No inventories found
                </p>
                <p>
                    Import an inventory from your external system by adding its API token.
                </p>
            </field>
        </record>
    </data>
</odoo>