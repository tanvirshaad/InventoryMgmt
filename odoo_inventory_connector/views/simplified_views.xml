<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_inventory_connector_inventory_form" model="ir.ui.view">
            <field name="name">inventory.connector.inventory.form</field>
            <field name="model">inventory.connector.inventory</field>
            <field name="arch" type="xml">
                <form string="Inventory">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="api_token"/>
                            <field name="api_url"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- List View -->
        <record id="view_inventory_connector_inventory_tree" model="ir.ui.view">
            <field name="name">inventory.connector.inventory.list</field>
            <field name="model">inventory.connector.inventory</field>
            <field name="arch" type="xml">
                <list string="Inventories">
                    <field name="name"/>
                </list>
            </field>
        </record>

        <!-- Action -->
        <record id="action_inventory_connector_inventory" model="ir.actions.act_window">
            <field name="name">External Inventories</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">inventory.connector.inventory</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menu Structure -->
        <menuitem id="menu_inventory_connector_root" 
                  name="Inventory Connector" 
                  sequence="100"/>
                  
        <menuitem id="menu_inventory_connector_inventory" 
                  name="Inventories" 
                  parent="menu_inventory_connector_root" 
                  action="action_inventory_connector_inventory" 
                  sequence="10"/>
    </data>
</odoo>